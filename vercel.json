{
  "version": 2,
  "builds": [
    {
      "src": "src/app.py",
      "use": "@vercel/python",
      "config": { 
        "maxLambdaSize": "15mb",
        "runtime": "python3.9" 
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "src/app.py"
    }
  ],
  "env": {
      "PIP_REQUIREMENTS_FILE": "requirements-deploy.txt",
      "MODEL_DIR": "models",
      "DATA_PATH": "data/raw/stock_data.csv"
  }
}